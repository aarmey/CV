pipeline {
  agent any
  environment {
    PATH = "/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/texlive/2017/bin/x86_64-darwin/"
  }
  stages {
    stage('Build') {
      steps {
        sh 'xelatex Meyer_CV.tex'
        sh 'xelatex Biosketch.tex'
      }
    }
    stage('Deploy') {
      steps {
        sh './deploy.sh'
        archiveArtifacts artifacts: 'Meyer_CV.pdf', onlyIfSuccessful: true
        archiveArtifacts artifacts: 'Biosketch.pdf', onlyIfSuccessful: true
      }
    }
  }
}
