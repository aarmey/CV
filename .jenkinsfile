pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'make -j 3'
        archiveArtifacts artifacts: 'Output/Meyer_CV.pdf', onlyIfSuccessful: true
        archiveArtifacts artifacts: 'Output/Biosketch.pdf', onlyIfSuccessful: true
      }
    }
    stage('Deploy') {
      when { expression { env.BRANCH_NAME == 'master' } }
      steps { sh 'make upload' }
    }
  }
}
